<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            android:contentDescription="@string/app_name" />

        <!-- Bienvenida -->
        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Tarjeta de Acciones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAccionesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Métodos para añadir albarán"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />


                <!-- Escanear QR -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEscanear"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Escanear QR"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    app:icon="@drawable/ic_qr"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:iconSize="24dp" />

                <!-- Leer albarán (OCR) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEscanearOcr"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leer albarán (OCR)"
                    android:layout_marginBottom="8dp"
                    app:icon="@drawable/ic_text_recognition"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:iconSize="24dp" />

                <!-- Entrada manual -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEntradaManual"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrada manual"
                    app:icon="@drawable/ic_edit_note"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerRuta"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver ruta de hoy"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cerrar sesión -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconSize="24dp" />

        <!-- Espacio de respiración al final -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />
    </LinearLayout>
</ScrollView>
